#include <iostream>

using namespace std;

int main(){

	setlocale(LC_ALL, "Russian");
	int mah;
	cout << "Растчет минимальной емкости powerbank для 3-х зарядок телефона\nВведите емкость аккамулятора вашего телефона\n";
	cin >> mah;
	cout << "========================================================\n";
	int bank = mah * 3;
	cout << "Минимальная емкость powerbank должна сотавлять   " << bank << "мАч |\n";
	cout << "========================================================\n";

return 0;
}
